		<div id="page-wrapper">

			<!-- Header -->
				<div id="header-wrapper">
					<div id="header" class="container">

						<!-- Logo -->
            <h1 id="logo"><%= link_to "Home", pages_home_path %></h1>

						<!-- Nav -->
							<nav id="nav">
								<ul>
									<li>
                    <%= link_to "Scholarships", pages_scholarships_path %> 
										<ul>
											<li><a href="#">Lorem ipsum dolor</a></li>
